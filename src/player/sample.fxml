            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addFiles" prefWidth="60.0" text="Add" />
            <Button fx:id="openButton" mnemonicParsing="false" onAction="#openFiles" prefWidth="60.0" text="Open" />
            <Button fx:id="playListButton" mnemonicParsing="false" prefWidth="60.0" text="PlayList" />
            </children>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
        </VBox>
    </left>
   <padding>
      <Insets left="5.0" right="5.0" top="5.0" />
   </padding>
   <bottom>
      <VBox fx:id="playListPanel" alignment="CENTER">
         <children>
            <ListView fx:id="trackList" prefHeight="300.0" />
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </VBox>
   </bottom>
